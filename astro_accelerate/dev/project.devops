<DevOps type="project" version="0.0.0">
 <project version="dev" name="astro_accelerate"/>
 <sources>
  <source type="git" url="https://github.com/wesarmour/astro-accelerate.git"/>
 </sources>
 <workflows>
  <workflow name="build">
   <task name="setup">
    <environment dependency="boost">
    BOOST_FLAGS=-DBOOST_ROOT=${boost::install_dir}
    </environment>
    <environment arch="darwin">
    FLAGS="-Wno-dev -DGTEST_USE_OWN_TR1_TUPLE=1"
    </environment>
    <environment type="debug">
    FLAGS="-DCMAKE_BUILD_TYPE=debug"
    </environment>
    <code type="bash">
    cmake ${FLAGS} ${BOOST_FLAGS} -DCMAKE_INSTALL_PREFIX="${install_dir}" "${src_dir}"
    </code>
   </task>
   <task name="build">
    <code type="bash">
    make
    </code>
   </task>
   <task name="install">
    <code type="bash">
    make install
    </code>
   </task>
  </workflow>
 </workflows>
 <dependencies>
  <dependency name="boost" version="1.57"/>
 </dependencies>
 <EnvironmentManager>
  <environment name="export"/>
 </EnvironmentManager>
</DevOps>
