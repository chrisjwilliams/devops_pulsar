<DevOps version="0.0.0" type="project">
 <project version="dev" name="greenburst"/>
 <sources>
  <source url="https://github.com/griffinfoster/greenburst-sps.git" type="git"/>
 </sources>
 <workflows>
  <workflow name="build">
   <task name="setup">
    <environment dependency="boost">
    BOOST_FLAGS=-DBOOST_ROOT=${boost::install_dir}
    </environment>
    <environment dependency="panda">
    PANDA_FLAGS="-DPANDA_INSTALL_DIR=${panda::install_dir}"
    </environment>
    <environment dependency="cheetah">
    PANDA_FLAGS="-DCHEETAH_INSTALL_DIR=${cheetah::install_dir}"
    </environment>
    <environment type="debug">
    FLAGS="-DCMAKE_BUILD_TYPE=debug"
    </environment>
    <code type="bash">
    cmake ${FLAGS} ${BOOST_FLAGS} ${PANDA_FLAGS} -DCMAKE_INSTALL_PREFIX="${install_dir}" "${src_dir}"
    </code>
   </task>
   <task name="build">
    <code type="bash">
    make -j
    </code>
   </task>
   <task name="install">
    <code type="bash">
    make install
    </code>
   </task>
  </workflow>
 </workflows>
 <dependencies>
  <dependency version="1.57" name="boost"/>
  <dependency version="dev" name="panda"/>
  <dependency version="dev" name="cheetah"/>
 </dependencies>
</DevOps>
